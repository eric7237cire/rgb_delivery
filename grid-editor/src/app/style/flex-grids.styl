.row-height-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction : row ;

  width: 250px;

  input {
    width: 100%;
    box-sizing: border-box;

    border: 1px solid black;

    background-color: grey;
  }
}

.item
  flex-basis : 50%;
  flex-grow : 0;
  flex-shrink :0;



  &.wide
    flex-basis: 100%;


.control-row {
  margin-top : 10px;
}

selected-button()
  color:white;
  font-size:1em;

.color-container
  position : absolute;
  right : 15px;
  top: 15px;
  display: flex;
  flex-wrap: wrap;
  flex-direction : row ;
  width: 170px;


  .color
    flex-basis : 80px;
    height: 25px;
    line-height: 25px;
    flex-grow : 0;
    flex-shrink :0;
    font-size: .9em;
    button()
    padding:0

    &.selected
      selected-button()



.tiles {
  display: flex;
  flex-direction: column;
  flex : 1;

  .tile {
    button()

    &.selected {
      selected-button()
    }
  }
}

.things
  display: flex;
  flex-direction: column;
  flex : 1;

  .thing
    button()

    &.selected
      selected-button()

.buttons
  display: flex;
  flex-wrap: wrap;
  flex-direction : column ;
  height: 35px;

  .button {
    margin-right: 5px;
  }


