  // layout
blackboard_width = 440px

.page-wrapper {
  margin: 15px;
}

.main-layout {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  overflow: auto

  .column {


    flex-basis 50%;
    flex-grow 1
    flex-shrink 0

    min-width 50%
  }

  .column:first-of-type {
    width blackboard_width
    min-width blackboard_width
    height 500px
  }

}


.row-height-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;

  width: 250px;

  input {
    width: 100%;
    box-sizing: border-box;

    border: 1px solid black;

    background-color: grey;
  }
}

.item
  flex-basis: 50%;
  flex-grow: 0;
  flex-shrink: 0;


  &.wide
    flex-basis: 100%;


.control-row {
  margin-top: 10px;
}

selected-button()
  color: white;
  font-size: 1em;

file-input-height = 35px
file-input-bottom-margin = 5px

.color-container
  position: absolute;
  right: 15px;
  top: file-input-height + file-input-bottom-margin
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  width: 170px;


  .color
    flex-basis: 80px;
    height: 25px;
    line-height: 25px;
    flex-grow: 0;
    flex-shrink: 0;
    font-size: .9em;
    button()
    margin-top: 0
    margin-bottom: 0
    padding: 0

    &.selected
      selected-button()
      text-shadow 0 0 4px black


.tiles {
  display: flex;
  flex-direction: column;
  flex: 1;

  .tile {
    button()

    &.selected {
      selected-button()
    }
  }
}

.things
  display: flex;
  flex-direction: column;
  flex: 1;

  .thing
    button()

    &.selected
      selected-button()

.buttons
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  height: 35px;

  .button {
    margin-right: 5px;
  }


.file-controls {
  display: flex;
  height: file-input-height;
  margin-bottom file-input-bottom-margin
  flex-direction: row

  input {
    width: 100px;
    margin-top : 3px;
  }

  .load-example {
     @extends .button
  }

  label:first-of-type {
    margin-left : 40px
    line-height file-input-height
    margin-right 2px
  }
}
