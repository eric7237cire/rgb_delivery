.toggle-switch {
  input[type=checkbox] {
    height: 0;
    width: 0;
    visibility: hidden;
  }

  label {
    cursor: pointer;
    text-indent: -9999px;
    width: 200px * scaling_factor;
    height: 100px * scaling_factor;
    background: grey;
    display: block;
    border-radius: 100px * scaling_factor;
    position: relative;
  }

  label:after {
    content: '';
    position: absolute;
    top: 5px * scaling_factor;
    left: 5px * scaling_factor;
    width: 90px * scaling_factor;
    height: 90px * scaling_factor;
    background: #fff;
    border-radius: 90px * scaling_factor;
    transition: 0.3s;
  }

  input:checked + label {
    background: #bada55;
  }

  input:checked + label:after {
    left: "calc(100% - %s)" % (5px * scaling_factor)
    transform: translateX(-100%);
  }

  label:active:after {
    width: 130px * scaling_factor;
  }

}
