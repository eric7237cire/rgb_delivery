
clickable()
    cursor: pointer

button-border()
    border: 1px solid black

box()
  display: inline-block;
  padding: 5px;
  margin-right: 10px;


button()
  button-border()
  clickable()
  text-align: center;
  text-decoration: none;
  padding: 0.2em;
  margin-top: 3px;
  background-color: teal;

  &:hover {
    color: white;
    text-shadow 0 0 4px black
  }

.color {

    button-border()
    clickable()
}


.tile {
    box()
    button-border()
    clickable()
}

.thing {
    box()
    button-border()
    clickable()
}

.grid_text {

  font-size: 15px;
}

.warehouse_filled {
    font-size: 30px;
}

.van_text {
  font-size: 40px;
}

.dm_text {
  font-size: 20px;
  font-weight: bold;

  text-shadow: 0px 0px 3px #ffffff;
}

.annotation_text {
  font-size: 8px;
  font-weight: bold;
  fill: rgb(200,200,200)
}

.button
  button()
  background-color: darkslategrey

  // layout
.page-wrapper {
  margin: 15px;
}

.row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}

.column {
  display: flex;
  flex-direction: column;
  flex : 1;
}

svg {
  pointer-events: auto;
}

