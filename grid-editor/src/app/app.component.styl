.inputs {
display:grid;
grid-template-columns: 400px;
margin-bottom: 30px;
}

clickable()
    cursor: pointer

button-border()
    border: 1px solid black

.color {
    display: inline-block;
    padding: 5px;
    margin-right: 10px;
    button-border()
    clickable()
}

.tiles {
    width: 100%;
}
.tile {
    display: inline-block;
    padding: 5px;
    margin-right: 10px;
    button-border()
    clickable()
}

  .grid_text {

    font-size: 15px;
  }
